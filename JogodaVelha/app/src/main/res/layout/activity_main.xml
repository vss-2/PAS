<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_j1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text='Jogador 1: 0'
            />

        <TextView
            android:id="@+id/text_view_j2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_j1"
            android:textSize="30sp"
            android:text='Jogador 2: 0'
            />

        <Button
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="33dp"
            android:text="Reiniciar"
            android:layout_marginRight="33dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="@+id/botao_0"
            android:layout_height="match_parent"
            android:width="0dp"
            android:layout_weight="1"
            android:textSize="60sp"
            android:layout_margin="@dimen/cardview_default_radius"
            />
        <Button
            android:layout_width="@+id/botao_1"
            android:layout_height="match_parent"
            android:width="0dp"
            android:layout_weight="1"
            android:textSize="60sp"
            android:layout_margin="@dimen/cardview_default_radius"
            />
        <Button
            android:layout_width="@+id/botao_2"
            android:layout_height="match_parent"
            android:width="0dp"
            android:layout_weight="1"
            android:textSize="60sp"
            android:layout_margin="@dimen/cardview_default_radius"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="@+id/botao_3"
            android:layout_height="match_parent"
            android:width="0dp"
            android:layout_weight="1"
            android:textSize="60sp"
            android:layout_margin="@dimen/cardview_default_radius"
            />
        <Button
            android:layout_width="@+id/botao_4"
            android:layout_height="match_parent"
            android:width="0dp"
            android:layout_weight="1"
            android:textSize="60sp"
            android:layout_margin="@dimen/cardview_default_radius"
            />
        <Button
            android:layout_width="@+id/botao_5"
            android:layout_height="match_parent"
            android:width="0dp"
            android:layout_weight="1"
            android:textSize="60sp"
            android:layout_margin="@dimen/cardview_default_radius"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="@+id/botao_6"
            android:layout_height="match_parent"
            android:width="0dp"
            android:layout_weight="1"
            android:textSize="60sp"
            android:layout_margin="@dimen/cardview_default_radius"
            />
        <Button
            android:layout_width="@+id/botao_7"
            android:layout_height="match_parent"
            android:width="0dp"
            android:layout_weight="1"
            android:textSize="60sp"
            android:layout_margin="@dimen/cardview_default_radius"
            />
        <Button
            android:layout_width="@+id/botao_8"
            android:layout_height="match_parent"
            android:width="0dp"
            android:layout_weight="1"
            android:textSize="60sp"
            android:layout_margin="@dimen/cardview_default_radius"
            />
    </LinearLayout>

</LinearLayout>